print("Hey! Welcome to tip calculator")
total=float(input("What was the total bill?"))
tip=int(input("How much tip you want to give?"))
people=int(input("How many people?"))
tip_amount=(tip/100)
total_with_tip=total+(total*tip_amount)
price=(total_with_tip/people)
print("Amount each person should pay : "+ str(price))
